{
  "name": "seplin-highlighting",
  "displayName": "Seplin highlighting",
  "description": "Syntax highlighting for the Seplin langauge",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [{
      "id": "seplin",
      "aliases": ["seplin", "Seplin"],
      "icon": {
        "light": "./icons/seplin-light.png",
        "dark": "./icons/seplin-dark.png"
      },
      "extensions": [".sp", ".spc", ".spa"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "seplin",
      "scopeName": "source.sp",
      "path": "./syntaxes/seplin.tmLanguage.json"
    }]
  }
}
