
struct tuple<T,U>(fst: T, snd: U);

entry main() {
    
    o ::= 1;
    s :stable:= 2;
    c :const:= 3;

    t :tuple:= {o,2};


    t := {o, 5};

    print t.fst,t.snd,'\n';
    tuple_swap(t);
    print t.fst,t.snd,'\n';

    x ::= 4;
    y ::= 6;
    print x,y,'\n';
    swap(x,y);
    print x,y,'\n';
}

internal tuple_swap<S>(t: tuple<S,S>) {
    tmp ::= $t.fst;
    t.fst := t.snd;
    t.snd := tmp;
}

internal swap<F>(x: F, y: F) {
    tmp ::= $x;
    x := y;
    y := tmp;
}